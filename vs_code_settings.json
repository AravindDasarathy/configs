{
  "explorer.confirmDelete": false,
  "editor.insertSpaces": true,
  "explorer.compactFolders": true,
  //editor fonts
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.fontFamily": "Source Code Pro",
  // "editor.fontFamily": "Gaegu-Regular, monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",
  "editor.formatOnSave": false,
  "prettier.singleQuote": true,
  // terminal fonts
  "terminal.integrated.fontFamily": "Source Code Pro, monospace",
  "terminal.integrated.fontSize": 13,
  //editor and cursor
  "editor.renderWhitespace": "all",
  "editor.overviewRulerBorder": false,
  "editor.renderIndentGuides": false,
  "editor.rulers": [
    100
  ],
  "editor.detectIndentation": false,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "phase",
  "editor.minimap.enabled": false,
  "editor.selectionHighlight": true,
  "editor.semanticHighlighting.enabled": true,
  //fun
  "powermode.comboThreshold": 2,
  "powermode.shakeIntensity": 2,
  //workbench
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#8cff76",
    "editorWhitespace.foreground": "#f76f6f"
    // "editor.foldBackground": "#353F00"
  },
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  "workbench.colorTheme": "Verdandi Alter",
  "workbench.panel.defaultLocation": "bottom",
  //javascript
  "javascript.format.semicolons": "insert",
  "terminal.integrated.rendererType": "dom",
  "files.insertFinalNewline": false,
  "files.trimTrailingWhitespace": true,
  "powermode.presets": "fireworks",
  "diffEditor.ignoreTrimWhitespace": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.gpuAcceleration": "off",
  "json.schemas": [],
  "workbench.iconTheme": "vscode-great-icons",

  // "vscode_vibrancy.type": "dark",
  // "vscode_vibrancy.opacity": 0,
  // "vscode_vibrancy.theme": "Default Dark"
}
